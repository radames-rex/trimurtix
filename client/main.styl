.topbar
  position fixed
  top 0
  left 80px
  right 240px
  background transparent
  height 42px
  .autosave
    margin 10px 20px
    position absolute
    left 0
    img
      float left
      margin-right 5px
      margin-top 2px
    span
      font-weight 600
      font-size 12px
  .viewports
    display table
    margin 0 auto
    >a
      display inline-block
      margin 0
      padding 10px 10px 9px 10px
      cursor pointer
      opacity 0.4
      position relative
      border 0
      svg
        max-height 22px
      &:hover
        opacity 1
        svg
          transform scale(1.1,1.1)
          fill #9a74ce
