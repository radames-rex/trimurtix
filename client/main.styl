/*
 * Config
 * @ Variables
 *
*/


/*
 *  Global border-box
*/

global-border-box = true

/*
 *  Base Container
*/

base-size-container = 80em

/*
 *  1260px in font-size:16px
*/


/*
 *  Base stuff
*/

primary-color = #9A74CE
secondary-color = #FFD400
error-color = #ef5350
success-color = #2acd3f
assertive-color = rgb(255, 215, 92)
base-color = #f8f8fc
light-color = #FCFCFC
dark-color = #343C46
divider-color = #A6A8AC
text-color = #555

/*
 *  Font Color
*/

dark-opacity-color = rgba(0, 0, 0, 0.81)
light-opacity-color = rgba(255, 255, 255, 0.81)

.icon
  max-width 42px
  max-height 42px

/*
 *  Tipograpy
*/

base-font-text = 'Source Sans Pro',
Helvetica,
Arial,
sans-serif
base-font-title = 'Source Sans Pro',
Helvetica,
Arial,
sans-serif

/*
 *  base Font size
*/

base-font-size = 16px
base-line-height = 24px

/*
 *  Sizes
*/

x-large-size = 72px
large-size = 52px
medium-size = 32px
small-size = 22px
x-small-size = 14px

/*
 *  Heading sizes
*/

h1-size = 50px
h2-size = 42px
h3-size = 36px
h4-size = 30px
h5-size = 24px
h6-size = 15px

/*
 *  Small font sizes
*/

x-small-size = 12px
xx-small-size = 10px

/*
 *  Radius
*/

base-radius = 4px
base-circle-radius = 50%
base-rounded-radius = 28px

/*
 *  Use Defaults
*/

use-flexbox = true
use-flexbox-grid = true
use-depths = true
use-base-grid = true

/*
 *  Base Alignments
*/

base-spacing-unit = base-line-height
half-spacing-unit = base-spacing-unit / 2
line-height-ratio = base-line-height / base-font-size

/*
 *  Social Media Colors
*/

color-facebook = #3b5998
color-google = #dd4b39
color-twitter = #55acee
color-instagram = #3f729b
color-linkedin = #0976b4
color-pinterest = #cc2127
color-stumble = #eb4924
color-delicious = #3399ff
color-reddit = #5f99cf
color-whatsapp = #4dc247

body, html, main, #tmx-app
  margin 0
  padding 0
  height 100%
  background #f8f8fc
  color #666
  font-family base-font-text

*:focus
    // outline -webkit-focus-ring-color auto 5px
    outline -webkit-focus-ring-color auto 5px

// Landing Page
.LandingPage
  background dark-color
  height 100%
  display table
  width 100%
  text-align center
  .logo
    display table-cell
    vertical-align middle
    img
      margin 0 auto
      max-height 220px

.menu
  a
    &:hover
      box-shadow 0 0 0 0
      &:before
        display none

.input-field
  box-shadow 0 1px 0 0 #e5e5e5;
  border-radius 0
  width 100%
  padding 2px 8px 2px 0
  &:hover, &:active, &:focus
    box-shadow 0 2px 0 0 #9A74CE
    color #9A74CE

.select-field
  &:hover
    select
      box-shadow 0 2px 0 0 #9A74CE
      color #9A74CE
    svg
      fill #9A74CE
  select
    padding-left 0
    background transparent
    box-shadow 0 1px 0 0 #e5e5e5
    border-radius 0
    width 100%
    color #666
    font-size 14px
    height 34px
    min-height 34px
    line-height 34px
  svg
    width 14px
    height 14px
    position absolute
    right 0
    top 14px
  &:before
    display none

// Sidebar
.sidebar.left
  height 100%
  position fixed
  left 0
  width 80px
  background #fff
  box-shadow 0 0 10px -3px rgba(0, 0, 0, .4)
  .menu
    .item
      text-align center
    svg
      max-width 32px
      max-height 42px
      display table
      margin 0 auto
      fill #666
      transition all 0.2s ease-in-out
    span
      text-transform uppercase
      font-size 12px
      font-weight 600
      width 100%
      line-height 16px
      transition all 0.2s ease-in-out
      display table
      margin-top 5px
    a
      display block
      padding 15px 4px
      color #666
      text-decoration none
      position relative
      transition all 0.2s ease-in-out
      &:hover
        opacity 1
        background #f8f8fc
        svg
          transform scale(1.1,1.1)
          fill #9a74ce
        span
          color #9A74CE

  .logo
    background #9A74CE
    width 80px
    height 80px
    display table
    margin 0
    a
      width 80px
      display table-cell
      vertical-align middle
    img
      max-width 58px
      margin 0 auto
      display table



.sidebar.right
  height 100%
  position fixed
  right 0
  z-index 4
  width 240px
  background #fff
  box-shadow 0 0 10px -3px rgba(0, 0, 0, .4)
  > .sidebar-header
    background #9A74CE
    color #fff
    padding 15px

    .sidebar-title
      font-size 20px
      color #fff
      margin-bottom 0
    .sidebar-subtitle
      font-size 16px
      font-weight 600
.collapse
  border-radius 0
  .collapse-item
    margin 0
    border-top 0
    border-radius 0
    border-bottom 1px solid #e5e5e5
    &:hover
      color #9A74CE
      background #f8f8fc
      svg
        fill #9A74CE
    input
      &:checked ~ label
        .icon
          transform rotate(90deg)
    label
      height 34px
      line-height 34px
      background transparent
      &:before
        display none
      svg
        float right
        width 14px
        height 14px
        position absolute
        right 8px
        top 10px
