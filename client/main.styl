      svg
        max-height 32px
        margin-bottom -4px
    .active
      opacity 1
      svg
        fill #9A74CE
      &:before
        width 6px
        height 6px
        background #9A74CE
        position absolute
        left 28px
        bottom 12px
        border-radius 50%
        z-index 9
        content ""
        top auto
        opacity 1
      &:after
        width 6px
        height 6px
        position absolute
        left 28px
        bottom 12px
        border-radius 50%
        content ""
        box-shadow 0 -3px 10px 3px #e6d3ff

