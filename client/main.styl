/*
 * Config
 * @ Variables
 *
*/


/*
 *  Global border-box
*/

global-border-box = true

/*
 *  Base Container
*/

base-size-container = 80em

/*
 *  1260px in font-size:16px;
*/


/*
 *  Base stuff
*/

primary-color = #9A74CE 
secondary-color = #FFD400 
error-color = #ef5350 
success-color = #2acd3f 
assertive-color = rgb(255, 215, 92) 
base-color = #f8f8fc 
light-color = #FCFCFC
dark-color = #343C46
divider-color = #A6A8AC
text-color = #555

/*
 *  Font Color
*/

dark-opacity-color = rgba(0, 0, 0, 0.81)
light-opacity-color = rgba(255, 255, 255, 0.81)

/*
 *  Tipograpy
*/

base-font-text = 'Source Sans Pro',
Helvetica,
Arial,
sans-serif;
base-font-title = 'Source Sans Pro',
Helvetica,
Arial,
sans-serif;

/*
 *  base Font size
*/

base-font-size = 16px
base-line-height = 24px

/*
 *  Sizes
*/

x-large-size = 72px
large-size = 52px
medium-size = 32px
small-size = 22px
x-small-size = 14px

/*
 *  Heading sizes
*/

h1-size = 50px
h2-size = 42px
h3-size = 36px
h4-size = 30px
h5-size = 24px
h6-size = 15px

/*
 *  Small font sizes
*/

x-small-size = 12px
xx-small-size = 10px

/*
 *  Radius
*/

base-radius = 4px
base-circle-radius = 50%
base-rounded-radius = 28px

/*
 *  Use Defaults
*/

use-flexbox = true
use-flexbox-grid = true
use-depths = true
use-base-grid = true

/*
 *  Base Alignments
*/

base-spacing-unit = base-line-height
half-spacing-unit = base-spacing-unit / 2
line-height-ratio = base-line-height / base-font-size;

/*
 *  Social Media Colors
*/

color-facebook = #3b5998
color-google = #dd4b39
color-twitter = #55acee
color-instagram = #3f729b
color-linkedin = #0976b4
color-pinterest = #cc2127
color-stumble = #eb4924
color-delicious = #3399ff
color-reddit = #5f99cf
color-whatsapp = #4dc247

body, html, main, #tmx-app
  margin: 0
  padding: 0
  height: 100%
  background: #f8f8fc

*:focus
    outline: -webkit-focus-ring-color auto 5px

// Landing Page
.LandingPage
  background: dark-color
  height: 100%
  display: table;
  width: 100%;
  text-align: center;
  .logo
    display: table-cell;
    vertical-align: middle;
    img
      margin: 0 auto;
      max-height: 220px
